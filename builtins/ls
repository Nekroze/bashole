#!/usr/bin/env bash
set -euf
GREEN='\033[0;32m'
NC='\033[0m'

function list_dir() {
	if [ ! -d "$1" ]; then
		return 0
	fi
	found="$(find "$1" -type f -executable)"
	if [ -n "$found" ]; then
		echo "$found" | xargs -L 1 basename
	fi
}

echo -e "${GREEN}Builtins:${NC}"
list_dir "$BUILTIN_DIRECTORY"
echo
echo -e "${GREEN}User Scripts:${NC}"
list_dir "$BASHOLE_DIRECTORY"
